{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "jsx": "preserve",
    "lib": ["dom"],   
    "baseUrl": "./",  
    "paths": {
      "@/*": ["./src/*"],
      "@@/*": ["./*"],
      "@components/*": ["./src/components/*"],
      "@layouts/*": ["./src/layouts/*"],
      "@templates/*": ["./src/templates/*"],
      "@utils/*": ["./utils/*"],
      "@static/*": ["./static/*"],
    },   
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,  
    "noUnusedParameters": true,  
    "moduleResolution": "node",
    "esModuleInterop": true,
  },  
  "includes": [
    "src/**/*",
    "config",
    "alltypes",
    "utils",
    "gatsby-browser.ts",
    "gatsby-node.ts",
    "gatsby-graphql.ts",
  ],         
  "exclude": [
    "node_modules",
     "public", 
     ".cache", 
     "static",
     "content",
     ".env",
     ".gitignore",
     ".prettierignore",
    ]
}