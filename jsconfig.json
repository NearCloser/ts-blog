{
  "compilerOptions": {
    "baseUrl": "./",
    "jsx": "react",
    "paths": {
      "@/*": ["./src/*"],
      "@@/*": ["./*"],
      "@components/*": ["./src/components/*"],
      "@layouts/*": ["./src/layouts/*"],
      "@templates/*": ["./src/templates/*"],
      "@utils/*": ["./src/utils/*"],
      "@static/*": ["./static/*"]
    }
  },
  "includes": ["src/**/*"],
  "exclude": [
    "node_modules",
    "public",
    ".cache",
    "static",
    "content",
    ".env",
    ".gitignore",
    ".prettierignore"
  ]
}
